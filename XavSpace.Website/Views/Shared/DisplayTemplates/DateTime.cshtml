@model DateTime
@{
    string suffix;

    switch (Model.Day)
    {
        case 1:
        case 21:
        case 31:
            suffix = "st";
            break;
        case 2:
        case 22:
            suffix = "nd";
            break;
        case 3:
        case 23:
            suffix = "rd";
            break;
        default:
            suffix = "th";
            break;
    }

    string output = String.Format("{1}{2} {0:MMMM}, {0:yyyy}", Model, Model.Day, suffix);
}

@output