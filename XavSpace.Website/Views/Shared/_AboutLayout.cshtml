<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title | XavSpace</title>
    @Html.Partial("LayoutPartials/_head")
    @RenderSection("head", required: false)
</head>
<body>
    @Html.Partial("LayoutPartials/_navbar")
    @if (Html.IsAboutPage(Context))
    {
        <div>
            @RenderBody()
        </div>
        <div>
            <div class="container body-content">
                <hr />
                @Html.Partial("LayoutPartials/_footer")
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/blur")
    @RenderSection("scripts", required: false)
</body>
</html>
