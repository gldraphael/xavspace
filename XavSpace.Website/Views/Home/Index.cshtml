@model List<XavSpace.Website.ViewModels.Notices.DetailedNoticeViewModel>
@{
    ViewBag.Title = "Your Notices";
    Layout = "~/Views/Shared/_NewsFeedLayout.cshtml";
}

@section head{
    <style>
        .post img {
            width: 100% !important;
        }

        .container img {
            width: 100%;
        }
    </style>
}

<h1>@ViewBag.Title</h1>

<div class="container">
    <div class="row">
        <div id="posts" class="col-md-6">
            @foreach (var item in Model)
            {

                @Html.Partial("_NoticePartial", item)

            }
        </div>
    </div>
        <div class="row">
            <div class="col-md-6">
                <div class="spinner" id="loadingAnimation">
                    <div class="rect1"></div>
                    <div class="rect2"></div>
                    <div class="rect3"></div>
                    <div class="rect4"></div>
                    <div class="rect5"></div>
                </div>
            </div>
        </div>

