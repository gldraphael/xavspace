@model XavSpace.Entities.Data.Notice

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />



    <div class="panel panel-delete">
        <div class="panel-heading" style="display:flex">
            <div class="col-md-8 col-lg-8 col-sm-8 col-xs-8" style="text-align:left">
                @if (Model.HighPriority)
                {
                    <i class="glyphicon glyphicon-exclamation-sign" title="High Priority"> </i>
                }
                &nbsp;@Html.DisplayFor(model => model.Title)
            </div>
            <div class="col-md-8 col-lg-8 col-sm-8 col-xs-8" style="text-align:right">
                Created on @Html.DisplayFor(model => model.DateCreated)
            </div>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
