@model IEnumerable<XavSpace.Entities.Data.Notice>

@{
    ViewBag.Title = "Notices";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NoticeBoard.Title)*@
            Notice Board
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateApproved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HighPriority)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoticeBoard.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateApproved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HighPriority)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NoticeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NoticeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NoticeId })
        </td>
    </tr>
}

</table>
